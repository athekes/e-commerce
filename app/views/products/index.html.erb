<div class="flex flex-col">
  <div class='flex justify-between items-center'>
    <h1 class='text-2xl font-bold text-gray-700'> Products </h1>
  </div>

  <div class="grid md:grid-cols-3 gap-4 mt-4">
    <% @products.each do |product| %>
      <div class="border p-4">
        <h2 class="text-lg font-medium text-gray-700"><%= product.name %></h2>

        <%= image_tag product.image_url, class: 'w-64 h-64' %>

        <p class="mt-2 text-sm font-medium text-gray-700"><%= product.description.truncate(155) %></p>
        
        <div class="flex justify-between items-center">
          <p class="text-xl mt-5 text-bold text-gray-700">R$ <%= product.price %></p>

          <%= link_to 'show', product, class: 'font-medium text-gray-700' %>
        </div>
      </div>
    <% end %>
</div>
