<div class="flex flex-col">
  <div class='flex justify-between items-center'>
    <h1 class='text-xl'> Catalogo de Produtos </h1>
    <%= link_to 'log out', destroy_user_session_path, data: { turbo_method: :delete } %>
  </div>

  <div class="grid md:grid-cols-3 gap-4 mt-4">
    <% @products.each do |product| %>
      <div class="border p-4">
        <h2 class="text-lg font-bold"><%= product.name %></h2>

        <%= image_tag product.image_url, class: 'w-64 h-64' %>

        <p class="text-sm mt-2"><%= product.description.truncate(155) %></p>
        
        <div class= "flex justify-between items-center">
          <p class="text-xl text-bold mt-5">R$ <%= product.price %></p>

          <%= link_to 'show', product, class: 'mt-4 bg-blue-500 text-white p-2 rounded' %>
        </div>
      </div>
    <% end %>
</div>

