  <%= turbo_stream.remove(@cart_item) %>
  <%= turbo_stream.replace(@cart, partial: 'carts/min_cart', locals: { cart: @cart }) %>
  <%= turbo_stream.replace('cart_total', partial: 'carts/cart_total', locals: { cart: @cart }) %>
<% end %>

